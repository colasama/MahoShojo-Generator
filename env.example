# 原生数据验证功能：HMAC签名的密钥配置
SIGNATURE_SECRET_KEY="在这里填写一个长且随机的安全密钥"

# (可选) 内容安全配置
# v0.2.1 版本引入了灵活的AI内容安全检查策略，可通过环境变量进行配置：

NEXT_PUBLIC_SAFETY_CHECK_POLICY='{"character":"none","scenario":"non-native-only","userGuidance":"all"}'
NEXT_PUBLIC_ENABLE_BUNDLE_SAFETY_CHECK=true
NEXT_PUBLIC_AI_SAFETY_PROMPT_LEVEL=moderate

# 队列系统配置
# 每分钟最大API请求数（控制向AI服务器的请求频率）
QUEUE_MAX_REQUESTS_PER_MINUTE=10
# 用户等待时间（秒，同一用户两次请求之间的最小间隔时间）
QUEUE_USER_WAIT_TIME_SECONDS=30

# AI负载均衡配置
# 负载均衡策略: sequential(顺序) | random(随机) | round_robin(轮询)
AI_LOAD_BALANCE_STRATEGY=random

# Cloudflare D1 数据库配置
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
D1_DATABASE_ID=your_d1_database_id_here

NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX